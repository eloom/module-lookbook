<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Eloom_Lookbook::css/lookbook.css" />
    </head>
    <body>
        <referenceContainer name="sidebar.main">
            <block class="Eloom\Lookbook\Block\Category\CategoryList" name="lookbook_category_menu" template="Eloom_Lookbook::category/category_menu.phtml">
                <arguments>
                    <argument name="html_id" xsi:type="string">utilities-lbcat</argument>
                    <argument name="css_class" xsi:type="string">utilities-lbcat</argument>
                </arguments>
            </block>
            <!-- <referenceBlock name="catalog.compare.sidebar" remove="true" /> -->
            <!-- <referenceBlock name="wishlist_sidebar" remove="true" /> -->
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Eloom\Lookbook\Block\Category\View" name="category.lookbooks" template="Eloom_Lookbook::category/view.phtml">
                <block class="Eloom\Lookbook\Block\Category\View" name="category.info" template="Eloom_Lookbook::category/information.phtml">
                    <block class="Eloom\Lookbook\Block\Category\View" name="category.social" template="Eloom_Lookbook::lookbook/social_buttons.phtml" />
                </block>
                <block class="Eloom\Lookbook\Block\Lookbook\ListLookbook" name="category.lookbooks.list" template="Eloom_Lookbook::lookbook/list.phtml">
                    <block class="Eloom\Lookbook\Block\Category\LookbookListToolbar" name="lookbook_list_toolbar" template="Eloom_Lookbook::category/lookbook_list_toolbar.phtml">
                        <block class="Magento\Theme\Block\Html\Pager" name="lookbook_list_toolbar_pager" />
                    </block>
                    <action method="setToolbarBlockName">
                        <argument name="name" xsi:type="string">lookbook_list_toolbar</argument>
                    </action>
                </block>
            </block>
        </referenceContainer>
        
        <move element="lookbook_category_menu" destination="utilities.sidebar.left" before="-" />
        
    </body>
</page>