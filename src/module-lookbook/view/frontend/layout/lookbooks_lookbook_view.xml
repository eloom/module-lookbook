<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Eloom_Lookbook::css/lookbook.css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Eloom\Lookbook\Block\Lookbook\View" name="lookbook" template="Eloom_Lookbook::lookbook/view.phtml">
                <block class="Eloom\Lookbook\Block\Lookbook\View" name="lookbook.info" template="Eloom_Lookbook::lookbook/information.phtml">
                    <block class="Eloom\Lookbook\Block\Lookbook\View" name="lookbook.social" template="Eloom_Lookbook::lookbook/social_buttons.phtml" />
                </block>
                <block class="Eloom\Lookbook\Block\Item\ListItem" name="lookbooks.item.list" template="Eloom_Lookbook::item/list.phtml">
                    <block class="Eloom\Lookbook\Block\Lookbook\ItemListToolbar" name="item_list_toolbar" template="Eloom_Lookbook::lookbook/item_list_toolbar.phtml">
                        <block class="Magento\Theme\Block\Html\Pager" name="item_list_toolbar_pager" />
                    </block>
                    <action method="setToolbarBlockName">
                        <argument name="name" xsi:type="string">item_list_toolbar</argument>
                    </action>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>